<div class="row">
  <h1>Db Connections</h1>
</div>

<div class="row">
  <table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Database name</th>
      <th>Database host</th>
      <th>Database user</th>
      <th>Database port</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @db_connections.each do |db_connection| %>
      <tr>
        <td><%= db_connection.name %></td>
        <td><%= db_connection.database_name %></td>
        <td><%= db_connection.database_host %></td>
        <td><%= db_connection.database_user %></td>
        <td><%= db_connection.database_port %></td>
        <td><%= db_connection.type %></td>
        <td><%= link_to 'Show', db_connection %></td>
        <td><%= link_to 'Edit', edit_db_connection_path(db_connection) %></td>
        <td><%= link_to 'Destroy', db_connection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Db Connection', new_db_connection_path %>
</row>
